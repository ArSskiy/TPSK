<Window x:Class="TPSK.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TPSK"
        mc:Ignorable="d"
        Title="LoginWindow" Height="1080" Width="1920" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="301*"/>
                <ColumnDefinition Width="1619*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="15*"/>
                <RowDefinition Height="38*"/>
            </Grid.RowDefinitions>
            <Image Source="/Images/shevron.jpg" />
            <TextBlock Grid.Column="1" Background="#FF02C982"/>
            <TextBlock Grid.Column="1" Background="#FF02C982" Text="ТПСК им.В.М. Максимчука" FontSize="120" 
                   VerticalAlignment="Center" FontWeight="Bold"/>
            <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="264*"/>
                    <ColumnDefinition Width="1090*"/>
                    <ColumnDefinition Width="265*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="59*"/>
                    <RowDefinition Height="75*"/>
                    <RowDefinition Height="94*"/>
                    <RowDefinition Height="79*"/>
                    <RowDefinition Height="120*"/>
                    <RowDefinition Height="34*"/>
                    <RowDefinition Height="89*"/>
                    <RowDefinition Height="26*"/>
                    <RowDefinition Height="89*"/>
                    <RowDefinition Height="95*"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="3" Grid.Column="1" Text="Светлана Дмитриевна,введите пароль:" 
                           VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="50"/>
                <PasswordBox Name="PassPb" Grid.Row="4" Grid.Column="1" Width="500" Height="75" FontSize="60" PasswordChar="$"/>
                <Button Grid.Row="6" Grid.Column="1" Width="200" Content="OK" Name="OkeyBtn" Click="OkeyBtn_Click"
                        FontSize="50"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
